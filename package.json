{
  "name": "electron",
  "version": "1.0.0",
  "description": "",
  "main": "app/main/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && electron .\"",
    "app": "electron .",
    "dev": "cd src/renderer/src/control && yarn serve",
    "build": "cd ./src/renderer/src/control && npm run build",
    "postinstall": "electron-builder install-app-deps",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:win": "npm run build && electron-builder --win --ia32"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "electron": "^11.4.2",
    "electron-is-dev": "^2.0.0",
    "is-electron": "^2.2.0",
    "robotjs": "^0.6.0",
    "vkey": "^1.0.1",
    "vue-electron": "^1.0.6"
  },
  "build": {
    "appId": "com.geektime.mercurius",
    "productName": "Mercurius",
    "files": "app",
    "asar": false,
    "directories": {
      "buildResources": "resource",
      "output": "release"
    },
    "copyright": "Copyright Â© 2020 dragon",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "background": "resources/background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "iconSize": 128
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "squirrel",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/dengyaolong/geektime-electron/master/img/icon.ico"
    }
  }
}
